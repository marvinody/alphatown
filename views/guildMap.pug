html
  include includes/mapbox.pug
  include includes/styles.pug
  head
    title= title

    script.
      const guildId = "#{guildId}"
    script(
      src='/javascript/main.js'
      defer
    )
  body
    h1= message
    div#map(

    )
    div.discord-login.action-corner.top.left
      a(href=oauth_url) Login with Discord

    div.discord-logout
      a(href='/auth/logout') Logout

    div.drop-pin.hide.action-corner.top.right
      span Drop your Pin

    form.modal#pin-edit.hide.form-group
      div.close-button
        span X
      div.form-row
        label(
          for='title'
        ) Title* (80)
        div.input-container
          input(
            name='title'
            placeholder='Cute title for others to see'
            maxlength=80
            required=true
          )
      div.form-row
        label(
          for='desc'
        ) Description (160)
        div.input-container
          textarea(
            name='desc'
            placeholder='Longer description for friends to read'
            rows=6
            maxlength=160
          )

      div.form-row
        label(
          for='image'
        ) Image*
        div.input-container
          input(
            name='image'
            type='file',
            required=true
            accept='image/*'
            multiple=false
          )
      
      div.form-row.center
        span.trigger-coord-select Click to choose location

      div.form-row.right
        button.submit-pin Submit

    div#coordinates.coordinates